<%= form_with(model: @gym,  local: true) do |f| %>



  <%= f.label :ジム名 %>
  <div class ="gym_name_form"><%= f.text_field :name, class: 'form-control' %></div>

  <%= f.label :口コミ %>
  <div class ="gym_content_form"><%= f.text_field :content, class: 'form-control' %></div>

  <div class ="gym_picture_form"><%= f.label :写真 %>
  <% gym.pictures.each do |picture| %>
  <%= image_tag(picture.url) %>
<% end %>
  <%= f.file_field :picture, type: :file, multiple: true %></div>

  <button type="button" class="btn btn-success"><%= f.submit yield(:button_text) %></button>
<% end %>

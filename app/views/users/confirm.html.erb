<% provide(:title, 'Sign up') %>
<h1>アカウント作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for:user, url: new_users_path do |f| %>
      <%= f.label :名前 %>
      <%= f.hidden_field :name, class: 'form-control' %>

      <%= f.label :メールアドレス %>
      <%= f.hidden_field :email, class: 'form-control' %>

      <%= f.label :パスワード %>
      <%= f.hidden_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "確認" %>
      <%= f.hidden_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "アカウントを作成する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

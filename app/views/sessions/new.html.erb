<% provide(:title, "Log in") %>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :パスワード %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me</span>
      <% end %>

      <%= f.submit "ログインボタン", class: "btn btn-primary" %>
      <%= f.hidden_field :email, value: 'test@example.com' %>
      <%= f.hidden_field :password, value: 'test' %>
      <%= f.submit 'テストログイン', class: "btn btn-primary" %>
    <% end %>

    <p class ="signup"><%= link_to "アカウントを作成する", signup_path %></p>
  </div>
</div>
